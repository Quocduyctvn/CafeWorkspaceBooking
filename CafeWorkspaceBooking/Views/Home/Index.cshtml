@model IEnumerable<CafeWorkspaceBooking.Models.AppPhong>

@{
	ViewData["Title"] = "CafeWorkspaceBooking";
}

<div class="text-center mt-5 pt-5" id="datphong">


	<div class="row m-5 room ">
		<div class="col-lg-12 tm-section-header-container ">
			<h2 class="tm-section-header gold-text tm-handwriting-font">
				<img src="img/logo.png" alt="Logo" class="tm-site-logo"> Đặt Phòng <br>Thuyết trình -Họp
			</h2>
			<div class="tm-hr-container"><hr class="tm-hr"></div>
		</div>

		@foreach (var p in Model)
		{
			<div class="col-md-5 m-lg-auto">
				<div class="papers text-center">
					<a asp-action="Detail" asp-controller="Home" asp-route-id="@p.IdPhong">
						<img src="@p.Img" alt="" height="300px" width="90%">
					</a><br />
					<h5 class="tm-handwriting-font tm-popular-item-title">
						<span class="tm-handwriting-font ">Phòng </span>@p.TenPhong
					</h5>
					<h5 class="pt-4">
						@p.MoTa
					</h5>
				</div>
			</div>
		}

	</div>






</div>
