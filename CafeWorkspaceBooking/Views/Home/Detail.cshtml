@model CafeWorkspaceBooking.Models.AppPhong
@{
	int slide1 = 0;
	int slide2= 0;
}

<div class="shop-detail-box-main ">
	<div class="container">
		<div class="row d-flex">
			<div class="col-xl-6 col-lg-6 col-md-6">
				<div class="col-md-6 m-lg-auto papers">
					@foreach (var item in Model.appImgPhongs)
					{
						slide1 = slide1 + 1;
						<div class="mySlides col-12">
							<div class="numbertext">@slide1 / @Model.appImgPhongs.Count</div>
							<img src="@item.Path" width="100%" height="400px">
						</div>
					}
					<a class="prev" onclick="plusSlides(-1)">❮</a>
					<a class="next" onclick="plusSlides(1)">❯</a>

					<div class="row col-12 mt-3">
						@foreach (var item in Model.appImgPhongs)
						{
							slide2 = slide2 + 1;
							<div class="column col-md-3 col-sm-4 col-6">
								<img class="demo cursor img-fluid" src="@item.Path" onclick="currentSlide(@slide2)" alt="">
							</div>
						}
					</div>
				</div>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6">
				<div class="col-md-6 m-lg-auto papers">
					<span><i>Trang Chủ / Chi tiết Phòng</i></span>
					<h2>Phòng @Model.TenPhong</h2>
					<h5>Giá Thuê: @Model.Gia.ToString("#,#") / Giờ</h5>
					<h4>Loại Phòng: Phòng Họp Hội - Thuyết trình</h4>
					<h4>Sức chứa: @Model.SucChua</h4>
					<p>
						@Model.MoTa
					</p>

					<a asp-action="BookingRoom" asp-controller="DatPhong" asp-route-id="@Model.IdPhong" class="tm-more-button margin-top-30">Đặt Phòng</a>
				

				</div>
			</div>
		</div>
	</div>
</div>

