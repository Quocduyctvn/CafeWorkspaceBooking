<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<canvas id="phong" style="width:100%;max-width:400px; height:140px"></canvas>

<script>
    // Convert the ViewBag data to a JavaScript array
    var mangSoLuongHoaDonTheoNgay = @Html.Raw(Json.Serialize(ViewBag.MangSoLuongHoaDonTheoNgay));

    // Assuming you have labels for days of the week
    var labels = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];

    // Create a line chart
    new Chart("phong", {
        type: "line",
        data: {
            labels: labels,
            datasets: [{
                fill: false,
                pointRadius: 1,
                borderColor: "rgba(0, 123, 255, 1)", // Change the color to your preference
                data: mangSoLuongHoaDonTheoNgay
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            legend: { display: false },
            title: {
                display: true,
                text: "Invoices per day",
                fontSize: 5
            }
        }
    });
</script>
