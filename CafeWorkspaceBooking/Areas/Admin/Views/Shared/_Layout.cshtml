<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] </title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CafeWorkspaceBooking.styles.css" asp-append-version="true" />
	<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,600,700' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Damion">
	<link href="~/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/css/templatemo-style.css" rel="stylesheet">
	<link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />


	<link href="~/css/Admin.css" rel="stylesheet">

</head>
<body>

	<div class="">
		<div id="mySidenav" class="sidenav">
			<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
			<a asp-action="Index" asp-controller="AdminHome">Trang Chủ</a>
			<a asp-action="Index" asp-controller="AdminPhong">Quản Lý Phòng</a>
			<a asp-action="Index" asp-controller="AdminDatPhong">Quản Lý Đặt Phòng</a>
			<a href="#">Quản Lý Dịch Vụ</a>
			<a href="#">Quản Lý khách Hàng</a>
			<a href="#">Admin</a>
			<a asp-action="Logout" asp-controller="Account" asp-area="">Đăng Xuất</a>
			<a href="#">Cài Đặt</a>
		</div>

		@* thông báo success or failed  *@
		<partial name="_Notify" />
		<div id="main" class="p-0">
			<div class="fs-3 p-4 bg-secondary" style="cursor:pointer;" onclick="openNav()">
				&#9776; Trang Quản Trị
			</div>

			<main role="main" class="p-5">
				@RenderBody()
			</main>
		</div>


	</div>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script type="text/javascript" src="~/js/jquery-1.11.2.min.js"></script>      <!-- jQuery -->
	<script type="text/javascript" src="~/js/templatemo-script.js"></script>      <!-- Templatemo Script -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script>
		function openNav() {
			document.getElementById("mySidenav").style.width = "300px";
			document.getElementById("main").style.marginLeft = "300px";
			document.getElementById("main").style.opacity = "0.1";
		}
		function closeNav() {
			document.getElementById("mySidenav").style.width = "0";
			document.getElementById("main").style.marginLeft = "0";
			document.getElementById("main").style.opacity = "1";
		}
	</script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
