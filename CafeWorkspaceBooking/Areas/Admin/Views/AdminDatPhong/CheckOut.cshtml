<style>
	.custom-shadow {
		box-shadow: 15px 15px 15px rgba(137, 212, 154, 0.5);
	}

	.custom-radio {
		transform: scale(1.5);
	}
</style>
<div class="container-sm  m-5 mt-5">
	<form asp-action="CheckOut" method="post">
		<div class="row py-5 rounded custom-shadow" style="background-color: rgb(200, 220, 220);">
			<div class="col-6  mx-auto p-3">
				<h5>THÔNG TIN THANH TOÁN</h5>
				<div class="row mt-4">
					<div class="col-6 mx-auto">
						<span class="pb-4">Họ Tên * </span>
						<input type="text" class="form-control" />
					</div>
					<div class="col-6 mx-auto">
						<span>Số CCCD * </span>
						<input type="text" class="form-control" />
					</div>
				</div>
				<div class="row mt-3">
					<div class="col-6 mx-auto">
						<span>Số điện thoại * </span>
						<input type="text" class="form-control" />
					</div>
					<div class="col-6 mx-auto">
						<span>Địa chỉ email * </span>
						<input type="text" class="form-control" />
					</div>
				</div>

				<div class="mt-3 mb-5" style="border-bottom: 1px solid rgb(255, 255,255);"></div>


				<div class="form-switch row">
					<div class="col-6 mx-auto">
						<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" checked>
						<label class="form-check-label" for="flexSwitchCheckDefault">In hóa đơn</label>
					</div>
					<div class="col-6 mx-auto">
						<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" checked>
						<label class="form-check-label" for="flexSwitchCheckDefault">Gửi mail cảm ơn </label>
					</div>
				</div>
			</div>
			<div class="col-5 mx-auto border border-dark border-2 rounded-2 p-3">
				<div class="row"> <h5>ĐƠN HÀNG CỦA BẠN</h5></div>

				<div class=" row fs-6 mt-3 fw-bold">
					<div class="col-7">DỊCH VỤ</div>
					<div class="col-5 text-end">TẠM TÍNH</div>
				</div>
				<div class="mt-2" style="border-bottom: 1px solid rgb(255, 255,255);"></div>
				<!-- lặp for ra các dịch vụ  -->
				<div class=" row fs-6 py-3">
					<div class="col-7">Đặt phòng</div>
					<div class="col-5 text-end fw-bold">1000 Đ</div>
				</div>

				<div class=" row fs-6 fw-bold">
					<div class="col-7">Tổng thanh toán</div>
					<div class="col-5 text-end fw-bold">1000 Đ</div>
				</div>
				<div class="mt-4" style="border-bottom: 1px solid rgb(255, 255,255);"></div>


				<div class="row fs-6 fw-bold my-2">
					<div>
						<input type="radio" name="paymentMethod" class="mr-5 custom-radio" />
						<span style="margin-left: 10px">Thanh toán tiền mặt</span>
					</div>
				</div>
				<div class="row fs-6 fw-bold my-2">
					<div>
						<input type="radio" name="paymentMethod" class="mr-5 custom-radio" />
						<span style="margin-left: 10px">Chuyển khoảng ngân hàng</span>
					</div>
				</div>
				<div class="row fs-6 fw-bold my-2">
					<div>
						<input type="radio" name="paymentMethod" class="mr-5 custom-radio" />
						<span style="margin-left: 10px">Quyết mã Momo</span>
					</div>
				</div>



				<button class="rounded bg-success" type="submit">Xác nhận thanh toán</button>
			</div>
		</div>
	</form>
</div>